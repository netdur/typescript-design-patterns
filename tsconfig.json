{
    "version": "0.1",
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
		"lib": ["dom", "es6", "es2016"],
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
		"outDir": "./dist/"//,
        //"outFile": "./dist/bundle.js"
    },
	"include": [
		"./src/**/*"
    ]
}